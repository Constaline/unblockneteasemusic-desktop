{
  "name": "unblockneteasemusic-desktop",
  "version": "1.0.5",
  "description": "unblockneteasemusic desktop version",
  "main": "./src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --",
    "postinstall": "patch-package"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Constaline/unblockneteasemusic-desktop.git"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "8.5.3",
    "electron-builder": "21.2.0",
    "patch-package": "6.2.2"
  },
  "dependencies": {
    "@nondanee/unblockneteasemusic": "0.25.3",
    "node-notifier": "8.0.0"
  },
  "build": {
    "productName": "UnblockNeteaseMusic",
    "appId": "com.unblockneteasemusic.desktop",
    "asar": {
      "smartUnpack": false
    },
    "asarUnpack": [
      "node_modules/node-notifier/vendor/**"
    ],
    "extraResources": [
      "assets/notifer.png"
    ],
    "directories": {
      "output": "dist"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "runAfterFinish": true,
      "allowElevation": true,
      "artifactName": "${name}-${version}.${ext}",
      "createDesktopShortcut": false
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.png"
    }
  }
}
